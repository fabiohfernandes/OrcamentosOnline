{
  "name": "@orcamentos/database",
  "version": "1.0.0",
  "description": "Or√ßamentosOnline Database Management Tools - CASSANDRA Agent",
  "private": true,
  "author": "Fabio Hartmann Fernandes <fabio@metamentes.com>",
  "license": "PROPRIETARY",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "migrate": "node scripts/migrate.js migrate",
    "migrate:status": "node scripts/migrate.js status",
    "migrate:dry-run": "node scripts/migrate.js migrate --dry-run",
    "seed": "node scripts/migrate.js seed",
    "seed:dry-run": "node scripts/migrate.js seed --dry-run",
    "backup": "bash scripts/backup.sh",
    "backup:schema": "bash scripts/backup.sh --schema",
    "backup:data": "bash scripts/backup.sh --data",
    "backup:verify": "bash scripts/backup.sh --verify",
    "backup:cleanup": "bash scripts/backup.sh --cleanup",
    "restore": "bash scripts/backup.sh --restore",
    "psql": "docker exec -it orcamentos-postgres psql -U $POSTGRES_USER -d $POSTGRES_DB",
    "logs": "docker logs -f orcamentos-postgres",
    "test:connection": "node -e \"require('./scripts/migrate.js').Database; console.log('Database configuration valid')\"",
    "health:check": "node scripts/health-check.js",
    "analyze": "node scripts/analyze-db.js",
    "vacuum": "node scripts/maintenance.js vacuum",
    "reindex": "node scripts/maintenance.js reindex"
  },
  "dependencies": {
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "prettier": "^3.0.3"
  },
  "config": {
    "database": {
      "host": "localhost",
      "port": 5432,
      "database": "orcamentos",
      "user": "orcamentos_user"
    },
    "backup": {
      "retention_days": 30,
      "compress": true,
      "encrypt": false
    }
  },
  "keywords": [
    "postgresql",
    "database",
    "migrations",
    "backup",
    "multi-tenant",
    "orcamentos"
  ],
  "repository": {
    "type": "git",
    "url": "private"
  },
  "bugs": {
    "email": "fabio@metamentes.com"
  },
  "funding": {
    "type": "private"
  }
}